@model List<Phone>

@{
    ViewBag.Title = "Мобильные телефоны";
    Layout = "_Layout";
}

<h2>Мобильные телефоны</h2>

<a asp-action="Create" asp-controller="Phone">Добавить смартфон</a>

<div class="table_section">
    @if (@Model.Count == 0)
    {
        <p>Смартфоны еще не добавлены</p>
    }
    else
    {
        <table style="width: 100%;">
            <tr>
                <th>Id</th>
                <th>Наименование</th>
                <th>Компания</th>
                <th>Стоимость</th>
                <th>Бренд</th>
                <th></th>
            </tr>
            @foreach (var phone in @Model)
            {
                <tr>
                    <td>@phone.Id</td>
                    <td>@phone.Name</td>
                    <td>@phone.Company</td>
                    <td>@phone.Price</td>
                    <td>@phone.BrandId</td>
                    <td>
                        <a asp-action="Create" asp-controller="Order" asp-route-phoneId="@phone.Id">Заказать</a>
                        <a asp-action="Edit" asp-controller="Phone" asp-route-Id="@phone.Id">Редактировать</a>
                        <a asp-action="Delete" asp-controller="Phone" asp-route-Id="@phone.Id">Удалить</a>
                        <a asp-action="Create" asp-controller="PhoneReview" asp-route-phoneId="@phone.Id">Комментарий</a>
                    </td>
                </tr>
                <tr>
                    <td colspan="6">
                        @if (phone.Reviews != null && phone.Reviews.Any())
                        {
                            <h4>Отзывы:</h4>
                            <ul>
                                @foreach (var review in phone.Reviews)
                                {
                                    <li>
                                        <strong>@review.UserName:</strong> @review.ReviewText (Оценка: @review.Rating)
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p>Отзывов пока нет</p>
                        }
                    </td>
                </tr>
            }
        </table>
    }

</div>