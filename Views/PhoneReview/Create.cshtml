@model PhoneReview

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h2>Create</h2>

    <form asp-action="Create" method="post">
        <input type="hidden" asp-for="PhoneId" />
        <div class="form-group">
            <label asp-for="UserName" class="control-label">Имя пользователя</label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ReviewText" class="control-label">Текст отзыва</label>
            <textarea asp-for="ReviewText" class="form-control" rows="5"></textarea>
            <span asp-validation-for="ReviewText" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Rating" class="control-label">Оценка</label>
            <input asp-for="Rating" class="form-control" type="number" min="0" max="5" step="1" />
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>
